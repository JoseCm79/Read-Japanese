                    <CheckBox  Color="	#1affff" x:Name="checkBoxTy" Grid.Row="3" Grid.Column="2" IsChecked="False"/>
                    <Label Text="ちや　ちゆ　ちよ　" TextColor="white" FontSize="19" Margin="35,5,0,0" Grid.Column="2" Grid.Row="3"></Label>
                    <CheckBox  Color="	#1affff" x:Name="checkBoxNy" Grid.Row="4" Grid.Column="2" IsChecked="False"/>
                    <Label Text="にや　にゆ　によ　" TextColor="white" FontSize="19" Margin="35,5,0,0" Grid.Column="2" Grid.Row="4"></Label>
                    <CheckBox Color="	#1affff" x:Name="checkBoxHy" Grid.Row="5" Grid.Column="2" IsChecked="False" />
                    <Label Text="ひや　ひゆ　ひよ　" TextColor="white" FontSize="19" Margin="35,5,0,0" Grid.Column="2" Grid.Row="5"></Label>
                    <CheckBox  Color="	#1affff" x:Name="checkBoxMy" Grid.Row="6" Grid.Column="2" IsChecked="False"/>
                    <Label Text="みや　みゆ　みよ　" TextColor="white" FontSize="19" Margin="35,5,0,0" Grid.Column="2" Grid.Row="6"></Label>
                    <CheckBox  Color="	#1affff" x:Name="checkBoxRy" Grid.Row="7" Grid.Column="2" IsChecked="False" />
                    <Label Text="りや　りゆ　りよ　" TextColor="white" FontSize="19" Margin="35,5,0,0" Grid.Column="2" Grid.Row="7" ></Label>


                    <Label Text="Dakuten y Handakuten con combinaciones con la Y" TextColor="#008080" FontSize="18" HorizontalTextAlignment="Center" FontFamily="Fuente" Grid.Row="11" Grid.Column="2"></Label>

                    <CheckBox  Color="	#1affff" x:Name="checkBoxKry" Grid.Row="12" Grid.Column="2" IsChecked="False"/>
                    <Label Text="ぎや　ぎゆ　ぎよ　" TextColor="white" FontSize="19" FontFamily="Fuente" Margin="45,5,0,0" Grid.Column="2"  Grid.Row="12"></Label>
                    <CheckBox  Color="	#1affff" x:Name="checkBoxSry" Grid.Row="13" Grid.Column="2" IsChecked="False"/>
                    <Label Text="じや　じゆ　じよ　" TextColor="white" FontSize="19" FontFamily="Fuente" Margin="45,5,0,0" Grid.Column="2"  Grid.Row="13"></Label>
                    <CheckBox  Color="	#1affff" x:Name="checkBoxHRry" Grid.Row="14" Grid.Column="2" IsChecked="False"/>
                    <Label Text="びや　びゆ　びよ　" TextColor="white" FontSize="19" FontFamily="Fuente" Margin="42,5,0,0" Grid.Column="2"  Grid.Row="14"></Label>
                    <CheckBox  Color="	#1affff" x:Name="checkBoxHry" Grid.Row="15" Grid.Column="2" IsChecked="False" />
                    <Label Text="ぴや　ぴゆ　ぴよ　" TextColor="white" FontSize="19" FontFamily="Fuente" Margin="45,5,0,0" Grid.Column="2"  Grid.Row="15"></Label>
                    <Button Text="Empezar examén" Margin="50,0,50,0" BorderColor="Black" BackgroundColor="#008080" Grid.Column="1" Grid.ColumnSpan="2"  Grid.Row="21" Clicked="Button_Clicked" CornerRadius="15" FontFamily="Fuente"></Button>
