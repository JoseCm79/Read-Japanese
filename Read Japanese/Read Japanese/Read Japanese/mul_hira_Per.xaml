        HeightRequest="2000"
            BackgroundColor="#003e93">
            <StackLayout BackgroundColor="#003333">
                <Label Text="Seleccione las filas de hiraganas que desees practicar" HorizontalTextAlignment="Center" FontFamily="Fuente" FontSize="20" Margin="50,50,50,20" TextColor="#008080" ></Label>
